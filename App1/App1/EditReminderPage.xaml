<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.EditReminderPage"
             Title="Reminder">

    <ContentPage.Content>
        <StackLayout>
            <!-- Entry for reminder text -->
            <Editor x:Name="ReminderText"
                    Placeholder="Enter your reminder here..." />

            <!-- Save button -->
            <Button Text="Save" 
                    Clicked="OnSaveClicked" />

            <!-- Delete button -->
            <Button Text="Delete" 
                    Clicked="OnDeleteClicked" />

            <!-- Footer -->
            <Label Text="S123456 Bill Gunn" 
                   FontSize="12"
                   HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
